{
  email {$CADDY_EMAIL}
  servers {
    protocols h1 h2 h3
  }
}

{$DOMAIN} {
  encode zstd gzip

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "no-referrer"
  }

  reverse_proxy api:3000 {
    flush_interval -1
  }
}
